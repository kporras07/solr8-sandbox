{
    "name": "pantheon-upstreams/drupal-project",
    "description": "Install Drupal 9 with Composer on Pantheon.",
    "type": "project",
    "license": "MIT",
    "repositories": {
        "webp": {
            "type": "vcs",
            "url": "https://bitbucket.org/kporras07/webp.git"
        },
        "0": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        "1": {
            "type": "path",
            "url": "upstream-configuration"
        }
    },
    "require": {
        "composer/installers": "^1.9",
        "cweagans/composer-patches": "^1.7",
        "drupal/core-composer-scaffold": "^9.2",
        "drupal/core-recommended": "^9.2",
        "drupal/devel": "^4.1",
        "drupal/jsonapi_search_api": "^1.0@RC",
        "drupal/metatag": "^1.22",
        "drupal/pantheon_advanced_page_cache": "^2",
        "drush/drush": "^11",
        "pantheon-systems/drupal-integrations": "^9",
        "pantheon-systems/search_api_pantheon": "^8.x-dev",
        "pantheon-upstreams/upstream-configuration": "self.version"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "classmap": [
            "scripts/ComposerScripts.php"
        ]
    },
    "scripts": {
        "pre-install-cmd": [
            "/usr/local/bin/php-site-repository-tool --version"
        ],
        "post-install-cmd": [
            "DrupalComposerManaged\\ComposerScripts::postInstall"
        ],
        "post-update-cmd": [
            "DrupalComposerManaged\\ComposerScripts::postInstall"
        ],
        "post-package-install": [
            "DrupalComposerManaged\\ComposerScripts::postInstallPackage"
        ],
        "post-package-update": [
            "DrupalComposerManaged\\ComposerScripts::postInstallPackage"
        ]
    },
    "extra": {
        "drupal-scaffold": {
            "locations": {
                "web-root": "./web"
            },
            "allowed-packages": [
                "pantheon-systems/drupal-integrations"
            ],
            "file-mapping": {
                "[project-root]/.editorconfig": false,
                "[project-root]/pantheon.upstream.yml": false,
                "[project-root]/.gitattributes": false
            }
        },
        "installer-paths": {
            "web/core": [
                "type:drupal-core"
            ],
            "web/libraries/{$name}": [
                "type:drupal-library"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/Commands/contrib/{$name}": [
                "type:drupal-drush"
            ],
            "web/modules/custom/{$name}": [
                "type:drupal-custom-module"
            ],
            "web/profiles/custom/{$name}": [
                "type:drupal-custom-profile"
            ],
            "web/themes/custom/{$name}": [
                "type:drupal-custom-theme"
            ],
            "web/private/scripts/quicksilver/{$name}/": [
                "type:quicksilver-script"
            ]
        },
        "composer-exit-on-patch-failure": true,
        "patchLevel": {
            "drupal/core": "-p2"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "platform": {
            "php": "7.4"
        },
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "composer/installers": true,
            "cweagans/composer-patches": true,
            "drupal/core-composer-scaffold": true
        }
    }
}
