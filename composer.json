{
    "name": "pantheon-upstreams/drupal-project",
    "description": "Install Drupal 9 with Composer on Pantheon.",
    "type": "project",
    "license": "MIT",
    "repositories": {
        "papc": {
            "type": "vcs",
            "url": "https://git.drupalcode.org/project/pantheon_advanced_page_cache.git"
        },
        "sap": {
            "type": "path",
            "url": "modules/search_api_pantheon"
        },
        "pantheon_secrets": {
            "type": "path",
            "url": "modules/pantheon_secrets"
        },
        "0": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        "1": {
            "type": "path",
            "url": "upstream-configuration"
        },
        "2": {
            "type": "path",
            "url": "composer-disable-plugin"
        },
        "3": {
            "type": "vcs",
            "url": "https://github.com/pantheon-systems/customer-secrets-php-sdk.git"
        }
    },
    "require": {
        "composer/installers": "^1.9",
        "cweagans/composer-patches": "^1.7",
        "drupal/core-composer-scaffold": "^9.2",
        "drupal/core-recommended": "^9.2",
        "drupal/devel": "^4.1",
        "drupal/jsonapi_search_api": "^1.0@RC",
        "drupal/key": "^1.16",
        "drupal/mailsystem": "^4.4",
        "drupal/metatag": "^1.22",
        "drupal/pantheon_advanced_page_cache": "bugs-5478-dev",
        "drupal/restui": "^1.21",
        "drupal/sendgrid_api": "^1.0",
        "drupal/sendgrid_mailer": "^1.1",
        "drush/drush": "^11",
        "pantheon-systems/drupal-integrations": "^9",
        "pantheon-systems/search_api_pantheon": "^8.x-dev",
        "pantheon-upstreams/upstream-configuration": "self.version",
        "phpro/grumphp": "*"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "classmap": [
            "scripts/ComposerScripts.php"
        ]
    },
    "scripts": {
    },
    "extra": {
        "drupal-scaffold": {
            "locations": {
                "web-root": "./web"
            },
            "allowed-packages": [
                "pantheon-systems/drupal-integrations"
            ],
            "file-mapping": {
                "[project-root]/.editorconfig": false,
                "[project-root]/pantheon.upstream.yml": false,
                "[project-root]/.gitattributes": false
            }
        },
        "installer-paths": {
            "web/core": [
                "type:drupal-core"
            ],
            "web/libraries/{$name}": [
                "type:drupal-library"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/Commands/contrib/{$name}": [
                "type:drupal-drush"
            ],
            "web/modules/custom/{$name}": [
                "type:drupal-custom-module"
            ],
            "web/profiles/custom/{$name}": [
                "type:drupal-custom-profile"
            ],
            "web/themes/custom/{$name}": [
                "type:drupal-custom-theme"
            ],
            "web/private/scripts/quicksilver/{$name}/": [
                "type:quicksilver-script"
            ]
        },
        "composer-exit-on-patch-failure": true,
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "composer-disable-plugin": {
            "disablePlugins": [
                {
                    "packageName": "phpro/grumphp",
                    "rules": [
                        {
                            "name": "isPantheon"
                        }
                    ]
                }
            ]
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "platform": {
            "php": "8.1.13"
        },
        "allow-plugins": true
    }
}
